      await performAction();
      onAction && onAction();
    } catch (err) {
      setError(err.message);
    } finally {
      setLoading(false);
    }
  };
  
  // Render method
  return (
    <div>
      {error && <Alert variant="danger">{error}</Alert>}
      {/* Component JSX */}
